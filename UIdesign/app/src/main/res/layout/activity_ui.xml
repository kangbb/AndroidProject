<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uidesign.UIActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textSize="20sp"
        android:text="@string/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sysu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/sysu_sign" />

    <TextView
        android:id="@+id/ID"
        style="@style/normal_text"
        android:text="@string/ID"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/password"
        style="@style/normal_text"
        android:text="@string/password"
        app:layout_constraintTop_toBottomOf="@id/ID"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        style="@style/edit_text"
        android:id="@+id/edit_text1"
        android:inputType="number"
        android:hint="@string/hint1"
        app:layout_constraintLeft_toRightOf="@id/ID"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/ID"/>

    <EditText
        style="@style/edit_text"
        android:id="@+id/edit_text2"
        android:inputType="textPassword"
        android:hint="@string/hint2"
        app:layout_constraintLeft_toRightOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/edit_text1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/password"
        />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/edit_text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/radio1"
            style="@style/radio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student"
            android:layout_marginEnd="5dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radio2"
            style="@style/radio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teacher"
            android:layout_marginStart="5dp"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/radio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/button1"
            android:background="@drawable/button"
            android:text="@string/signin"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/button2"
            android:background="@drawable/button"
            android:text="@string/login"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
